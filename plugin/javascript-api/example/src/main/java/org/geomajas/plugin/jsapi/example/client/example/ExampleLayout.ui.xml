<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">

	<ui:style>
		.outer {
			height: 80px;
			width: 350px;
			-moz-border-radius: 5px;
			border-radius: 5px;
			border: 1px solid #D0D8D0;
			background: #FFFFFF;
			background-image: -webkit-gradient(linear, left top, left bottom, from(#FFFFFF), to(#F8F8FF) );
			background-image: -moz-linear-gradient(top, #FFFFFF, #F8F8FF);
			margin: 5px;
			padding: 8px 12px 10px 12px;
			float:left;
			overflow: auto;
		}
		
		.outer-over {
			height: 80px;
			width: 350px;
			-moz-border-radius: 5px;
			border-radius: 5px;
			border: 1px solid #B0C0B0;
			background: #D0D0E0;
			background-image: -webkit-gradient(linear, left top, left bottom, from(#F0F0FF), to(#D0D0E0) );
			background-image: -moz-linear-gradient(top, #F0F0FF, #D0D0E0);
			margin: 5px;
			padding: 8px 12px 10px 12px;
			float:left;
			overflow: auto;
		}

		.title {
			color: #437669;
			font-family: Arial, Verdana;
			font-size: 14px;
			font-weight: bold;
			margin-bottom: 5px;
		}

		.explanation {
			color: #333333;
			font-family: Arial, Verdana;
			font-size: 12px;
			font-weight: normal;
		}
	</ui:style>
	
	<div class='{style.outer}'>
		<div ui:field='titleDiv' class='{style.title}'/>
		<div ui:field='explanationDiv' class='{style.explanation}'/>
	</div>

</ui:UiBinder> 