							<value>76.4370283</value>
							<value>38.2185141</value>
							<value>19.1092571</value>
							<value>9.55462853</value>
							<value>4.77731427</value>
							<value>2.38865713</value>
							<value>1.19432857</value>
						</list>
					</property>
					<property name="layers">
						<list>
							<ref bean="countriesInfo"/>
						</list>
					</property>
				</bean>

			</list>
		</property>
