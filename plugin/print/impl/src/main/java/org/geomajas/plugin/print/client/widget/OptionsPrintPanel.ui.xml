<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='msg' type='org.geomajas.plugin.print.client.i18n.PrintMessages' />
	<ui:with field='resource' type='org.geomajas.plugin.print.client.widget.PrintWidgetResource' />

	<g:VerticalPanel ui:field="totalPanel">
	
		<g:VerticalPanel ui:field="titleSection">
			<g:Label addStyleNames="{resource.css.fieldLabel}">
				<ui:text from='{msg.printPrefsTitleLabel}' />
				:
			</g:Label>

			<g:TextBox ui:field="titleTextBox" width="180px"
					   title="{msg.printPrefsTitleTooltip}"
					   addStyleNames="{resource.css.textboxSuitableMargin}"	/> <!--  excl padding-left: 5px and padding-right: 2px -->
		</g:VerticalPanel>
		<g:VerticalPanel ui:field="orientationSection">
			<g:Label addStyleNames="{resource.css.fieldLabel}">
				<ui:text from='{msg.printPrefsOrientation}' />
				:
			</g:Label>
			<g:HorizontalPanel addStyleNames="{resource.css.radioGroup}">
				<g:Cell>
					<g:RadioButton ui:field="optionLandscapeOrientation" name="orientationOption"
								   addStyleNames="{resource.css.radiobuttonMargin}" >
						<ui:text from="{msg.printPrefsLandscape}" />
					</g:RadioButton>
				</g:Cell>
				<g:Cell>
					<g:RadioButton ui:field="optionPortraitOrientation" name="orientationOption"
								   addStyleNames="{resource.css.radiobuttonMargin}" >
						<ui:text from="{msg.printPrefsPortrait}" />
					</g:RadioButton>
				</g:Cell>
			</g:HorizontalPanel>
		</g:VerticalPanel>
		<g:VerticalPanel ui:field="pageSizeSection">
			<g:Label addStyleNames="{resource.css.fieldLabel}">
				<ui:text from='{msg.printPrefsPageSizeLabel}' />
				:
			</g:Label>

			<g:ListBox ui:field="pageSizeListBox" width="180px"
					   title="{msg.printPrefsPageSizeTooltip}"/> <!--  excl padding-left: 5px and padding-right: 2px -->
		</g:VerticalPanel>
		<g:HorizontalPanel ui:field="withArrowSection" verticalAlignment="ALIGN_MIDDLE">
			<g:Label><ui:text from='{msg.printPrefsWithArrow}' /></g:Label>
			<g:CheckBox ui:field="arrowCheckBox"/>
		</g:HorizontalPanel>
		<g:HorizontalPanel ui:field="withScaleBarSection" verticalAlignment="ALIGN_MIDDLE">
			<g:Label><ui:text from='{msg.printPrefsWithScaleBar}' /></g:Label>
			<g:CheckBox ui:field="scaleBarBox"/>
		</g:HorizontalPanel>
		<g:VerticalPanel ui:field="rasterDpiSection">
			<g:Label addStyleNames="{resource.css.fieldLabel}">
				<ui:text from='{msg.printPrefsRasterDpi}' />
				:
			</g:Label>

			<g:TextBox ui:field="rasterDpiTextBox" width="180px"
					   title="{msg.printPrefsRasterDpiTooltip}"
					   addStyleNames="{resource.css.textboxSuitableMargin}"	/> <!--  excl padding-left: 5px and padding-right: 2px -->
		</g:VerticalPanel>
		<g:VerticalPanel ui:field="postPrintActionSection">
			<g:Label addStyleNames="{resource.css.fieldLabel}">
				<ui:text from='{msg.printPrefsPostPrintActionLabel}' />
				:
			</g:Label>

			<!--fill in the java file-->
			<g:VerticalPanel ui:field="postPrintActionRadioGroup" addStyleNames="{resource.css.radioGroup}"/>
		</g:VerticalPanel>
		<g:VerticalPanel ui:field="fileNameSection">
			<g:Label addStyleNames="{resource.css.fieldLabel}">
				<ui:text from='{msg.printPrefsFileName}' />
				:
			</g:Label>

			<g:TextBox ui:field="fileNameTextBox" width="180px"
					   title="{msg.printPrefsFileNameTooltip}"
					   addStyleNames="{resource.css.textboxSuitableMargin}"	/> <!--  excl padding-left: 5px and padding-right: 2px -->
		</g:VerticalPanel>

		<g:FlowPanel addStyleNames="{resource.css.buttons}">
			<g:Button ui:field="printButton"  styleName="{resource.css.printButton}">
				<ui:text from="{msg.printButtonTitle}" />
			</g:Button>
		</g:FlowPanel>
	</g:VerticalPanel>
	
	

</ui:UiBinder> 