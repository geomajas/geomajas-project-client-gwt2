<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='resource' type='org.geomajas.gwt2.example.base.client.resource.ShowcaseResource' />

    <ui:style>
        .textBoxLabel {
            display: inline-block;
            width: 75px;
        }
        .actionButtonGroup  {
            margin-top: 10px;
        }
        .actionButtonGroup button {
            display: block;
            margin-top: 5px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:west size="350">
            <g:ScrollPanel>
                <g:HTMLPanel addStyleNames="{resource.css.sampleLeftLayout}">
                    <div>
                        <g:Label addStyleNames="{style.textBoxLabel}">CRS:</g:Label>
                        <g:TextBox ui:field="crs"></g:TextBox>
                    </div>

                    <h3>Bbox values:</h3>
                    <div>
                        <div>
                            <g:RadioButton ui:field="widthHeightRadioBtn" name="bboxValuesButton" value="true" enabled="true">Width and Height</g:RadioButton>
                            <g:RadioButton ui:field="maxXMaxYRadioBtn" name="bboxValuesButton" value="false" enabled="true">Max X and Max Y</g:RadioButton>
                        </div>
                        <div>
                            <g:Label addStyleNames="{style.textBoxLabel}">X:</g:Label>
                            <g:TextBox ui:field="bboxX"></g:TextBox>
                        </div>
                        <div>
                            <g:Label addStyleNames="{style.textBoxLabel}">Y:</g:Label>
                            <g:TextBox ui:field="bboxY"></g:TextBox>
                        </div>
                        <g:HTMLPanel ui:field="widthHeightPanel">
                            <div>
                                <g:Label addStyleNames="{style.textBoxLabel}">Width:</g:Label>
                                <g:TextBox ui:field="bboxWidth"></g:TextBox>
                            </div>
                            <div>
                                <g:Label addStyleNames="{style.textBoxLabel}">Heigth:</g:Label>
                                <g:TextBox ui:field="bboxHeight"></g:TextBox>
                            </div>
                        </g:HTMLPanel>
                        <g:HTMLPanel ui:field="maxXMaxYPanel">
                            <div>
                                <g:Label addStyleNames="{style.textBoxLabel}">Max X:</g:Label>
                                <g:TextBox ui:field="bboxMaxX"></g:TextBox>
                            </div>
                            <div>
                                <g:Label addStyleNames="{style.textBoxLabel}">Max Y:</g:Label>
                                <g:TextBox ui:field="bboxMaxY"></g:TextBox>
                            </div>
                        </g:HTMLPanel>
                    </div>
                    <div class="{style.actionButtonGroup}">
                        <g:Button ui:field="bboxGetBtn">Get bounds from map</g:Button>
                        <g:Button ui:field="bboxApplyBtn">Apply bounds to map</g:Button>
                    </div>
                    <div class="{style.actionButtonGroup}">
                        <g:Button ui:field="drawBboxBtn">Draw rectangle on map</g:Button>
                        <g:Button ui:field="clearBboxBtn">Remove rectangle from map</g:Button>
                    </div>

				</g:HTMLPanel>
			</g:ScrollPanel>
        </g:west>
        <g:center>
            <g:SimplePanel addStyleNames="{resource.css.sampleContentLayout}">
                <g:ResizeLayoutPanel ui:field="mapPanel" width="100%" height="100%" />
            </g:SimplePanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder> 